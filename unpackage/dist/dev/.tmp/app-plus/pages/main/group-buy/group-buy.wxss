
.cu-tag.badge {
	right: 12rpx;
}
.agreement-mask{
	width: 100%;
	height:100vh; 
	background: rgba(0,0,0,.6);
	position:absolute;
	top:0rpx;
	z-index: 8888;
}
.agreement{
	width:80%;
	height: calc(100vh - 220rpx);
	border-radius: 30rpx;
	position:absolute;
	left:10%;
	top:120rpx;
}
.agreement-item{
	width:100% ;
	height: calc(100% - 110rpx );
	overflow: scroll;
	text-indent: 2em;
}
.agreement-btn{
	position: absolute;
	bottom:20rpx;
	 left:50%;
	 -webkit-transform: translateX(-50%);
	     -ms-transform: translateX(-50%);
	         transform: translateX(-50%);
}

