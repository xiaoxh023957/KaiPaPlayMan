/* 规格弹窗end */
.sprice {
	position: absolute;
	right: 90rpx;
}
.fixed {
	position: fixed;
	z-index: 99;
}
.VerticalNav.nav {
	width: 160rpx;
	white-space: initial;
}
.VerticalNav.nav .cu-item {
	width: 100%;
	text-align: center;
	background-color: #fff;
	margin: 0;
	border: none;
	height: 50px;
	position: relative;
}
.VerticalNav.nav .cu-item.cur {
	background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
	content: '';
	width: 8rpx;
	height: 30rpx;
	border-radius: 10rpx 0 0 10rpx;
	position: absolute;
	background-color: currentColor;
	top: 0;
	right: 0rpx;
	bottom: 0;
	margin: auto;
}
.VerticalBox {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.VerticalMain {
	background-color: #f1f1f1;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.tui-numberbox {
	position: relative;
	z-index: 22;
}
.tui-num-input {
	margin: 0;
}
.kp-goods-name {
	position: absolute;
	left: 146rpx;
	margin-right: 170rpx;
	word-break: break-all;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box !important;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
