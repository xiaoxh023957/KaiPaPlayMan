}

/* 购物车弹框 */
.shop-car {
	width: 100%;
	position: fixed;
	bottom: calc(6vh + 25rpx);
	max-height: calc(100% - 620rpx);
	z-index: 99999;
	overflow: scroll;
	padding: 40rpx;
}
.goods-name {
	width: 60%;
	word-break: break-all;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	line-height: 1.5;
}
.car-item {
	border-bottom: 1px solid #f1f1f1;
}

